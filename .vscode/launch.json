    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Debug (API)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/UltimateTicTacToe.Api/bin/Debug/net7.0/UltimateTicTacToe.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/UltimateTicTacToe.Api/bin/Debug/net7.0",
